extends partials/layout

//- Override default config variables
append config
  - var pageTitle = 'Favorites'
  - var parentMenu = 'Account'

//- Navbar
block navbar
  include partials/navbar-marketplace

//- Page Content
block content

  //- dashboard-header.pug template
  include partials/dashboard-header

  .container.mb-5.pb-3
    .bg-light.shadow-lg.rounded-3.overflow-hidden
      .row

        // Sidebar
        aside.col-lg-4.pe-xl-5
          //- sidebar-dashboard.pug template
          include partials/sidebar-dashboard

        // Content
        section.col-lg-8.pt-lg-4.pb-4.mb-3
          .pt-2.px-4.ps-lg-0.pe-xl-5
            h2.h3.pt-2.pb-4.mb-0.text-center.text-sm-start.border-bottom
              | Favorites
              span.badge.bg-faded-accent.fs-sm.text-body.align-middle.ms-2 4

            // Product
            .d-block.d-sm-flex.align-items-center.py-4.border-bottom
              a(href='marketplace-single.html' style='width: 12.5rem;').d-block.position-relative.mb-3.mb-sm-0.me-sm-4.ms-sm-0.mx-auto
                img(src='img/marketplace/products/th02.jpg' alt='Product').rounded-3
                span(data-bs-toggle='tooltip' title='Remove from Favorites').btn.btn-icon.btn-danger.position-absolute.top-0.end-0.py-0.px-1.m-2
                  i.ci-trash
              .text-center.text-sm-start
                h3.h6.product-title.mb-2
                  a(href='marketplace-single.html') UI Isometric Devices Pack (PSD)
                .d-inline-block.text-accent
                  | $23.<small>00</small>
                a(href='marketplace-vendor.html').d-inline-block.text-accent.fs-ms.border-start.ms-2.ps-2
                  | by uidesigner
                .d-sm-flex.align-items-center.pt-2
