extends partials/layout

//- Override default config variables
append config
  - var pageTitle = 'Your cart'
  - var breadcrumbs = [{'title': 'Market', 'link': 'marketplace-category.html'}, {'title': 'Cart'}]
  - var parentMenu = 'Shop'

//- Navbar
block navbar
  include partials/navbar-marketplace

//- Page Title
block page-title
  include partials/page-title-marketplace
  
//- Page Content
block content

  .container.mb-5.pb-3
    .bg-light.shadow-lg.rounded-3.overflow-hidden
      .row

        // Content
        section.col-lg-8.pt-2.pt-lg-4.pb-4.mb-3
          .pt-2.px-4.pe-lg-0.ps-xl-5

            // Header
            .d-flex.flex-wrap.justify-content-between.align-items-center.border-bottom.pb-3
              .py-1
                a(href='marketplace-category.html').btn.btn-outline-accent.btn-sm
                  i.ci-arrow-left.me-1.ms-n1
                  | Back to shopping
              .d-none.d-sm-block.py-1.fs-sm You have 3 products in your cart
              .py-1
                a(href='marketplace-category.html').btn.btn-outline-danger.btn-sm
                  i.ci-close.fs-xs.me-1.ms-n1
                  | Clear cart


            // Product
            .d-block.d-sm-flex.align-items-center.py-4.border-bottom
              a(href='marketplace-single.html' style='width: 12.5rem;').d-block.position-relative.mb-3.mb-sm-0.me-sm-4.ms-sm-0.mx-auto
                img(src='img/marketplace/products/th02.jpg' alt='Product').rounded-3
                span(data-bs-toggle='tooltip' title='Remove from Favorites').btn.btn-icon.btn-danger.position-absolute.top-0.end-0.py-0.px-1.m-2
                  i.ci-trash
              .text-center.text-sm-start
                h3.h6.product-title.mb-2
                  a(href='marketplace-single.html') UI Isometric Devices Pack (PSD)
                .d-inline-block.text-accent
                  | $23.<small>00</small>
                a(href='#').d-inline-block.text-accent.fs-ms.border-start.ms-2.ps-2
                  | by uidesigner
                .form-inline.pt-2
                  select.form-select.form-select-sm.my-1.me-2
                    option Standard license
                    option Extended license

            // Product
            .d-block.d-sm-flex.align-items-center.py-4.border-bottom
              a(href='marketplace-single.html' style='width: 12.5rem;').d-block.position-relative.mb-3.mb-sm-0.me-sm-4.ms-sm-0.mx-auto
                img(src='img/marketplace/products/th06.jpg' alt='Product').rounded-3
                span(data-bs-toggle='tooltip' title='Remove from Favorites').btn.btn-icon.btn-danger.position-absolute.top-0.end-0.py-0.px-1.m-2
                  i.ci-trash
              .text-center.text-sm-start
                h3.h6.product-title.mb-2
                  a(href='marketplace-single.html') Project Devices Showcase (PSD)
                .d-inline-block.text-accent
                  | $18.<small>00</small>
                a(href='#').d-inline-block.text-accent.fs-ms.border-start.ms-2.ps-2
                  | by pixels
                .form-inline.pt-2
                  select.form-select.form-select-sm.my-1.me-2
                    option Standard license
                    option Extended license

            // Product
            .d-block.d-sm-flex.align-items-center.pt-4.pb-2
              a(href='marketplace-single.html' style='width: 12.5rem;').d-block.position-relative.mb-3.mb-sm-0.me-sm-4.ms-sm-0.mx-auto
                img(src='img/marketplace/products/th07.jpg' alt='Product').rounded-3
                span(data-bs-toggle='tooltip' title='Remove from Favorites').btn.btn-icon.btn-danger.position-absolute.top-0.end-0.py-0.px-1.m-2
                  i.ci-trash
              .text-center.text-sm-start
                h3.h6.product-title.mb-2
                  a(href='marketplace-single.html') Gravity Devices UI Mockup (PSD)
                .d-inline-block.text-accent
                  | $15.<small>00</small>
                a(href='#').d-inline-block.text-accent.fs-ms.border-start.ms-2.ps-2
                  | by pixels
                .form-inline.pt-2
                  select.form-select.form-select-sm.my-1.me-2
                    option Standard license
                    option Extended license


        // Sidebar
        aside.col-lg-4.ps-xl-5
          hr.d-lg-none
          .p-4.h-100.ms-auto.border-start
            .px-lg-2
              .text-center.mb-4.py-3.border-bottom
                h2.h6.mb-3.pb-1 Cart total
                h3.fw-normal
                  | $56.
                  small 00
              .text-center.mb-4.pb-3.border-bottom
                h2.h6.mb-3.pb-1 Promo code
                form(method='post' novalidate).needs-validation.pb-2
                  .mb-3
                    input(type='text' placeholder='Promo code' required).form-control
                    .invalid-feedback Please provide promo code.
                  button(type='submit').btn.btn-secondary.d-block.w-100 Apply promo code
              a(href='marketplace-checkout.html').btn.btn-primary.btn-shadow.d-block.w-100.mt-4
                i.ci-locked.fs-lg.me-2
                | Secure Checkout
              .text-center.pt-2.pb-3
                small.text-form.text-muted 100% money back guarantee

//- Footer
block footer
  include partials/footer-marketplace

//- Handheld toolbar
block toolbar
  include partials/toolbar-marketplace
