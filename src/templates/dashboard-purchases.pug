            // Pagination
            nav.d-md-flex.justify-content-between.align-items-center.text-center.text-md-start.mt-4(aria-label='Page navigation')
              .d-md-flex.align-items-center.w-100
                span.fs-sm.text-muted.me-md-3 Showing 5 of 9 products
                .progress.w-100.my-3.mx-auto.mx-md-0(style='max-width: 10rem; height: 4px;')
                  .progress-bar(role='progressbar' style='width: 56%;' aria-valuenow='56' aria-valuemin='0' aria-valuemax='100')
              button(type='button').btn.btn-outline-primary.btn-sm
                | More products

//- Footer
block footer
  include partials/footer-marketplace

//- Handheld toolbar
block toolbar
  include partials/toolbar-marketplace
