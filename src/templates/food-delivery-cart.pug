extends partials/layout

//- Override default config variables
append config
  - var pageTitle = 'Food Delivery - Cart'
  - var parentMenu = 'Shop'
  - var breadcrumbs = [{'title': 'Cart'}]

//- Navbar
block navbar
  include partials/navbar-food-delivery

//- Page Content
block content
  .container.pt-4.pb-3.py-sm-4
    +breadcrumb('dark')
    .rounded-3.shadow-lg.mt-4.mb-5
      ul.nav.nav-tabs.nav-justified.mb-4
        li.nav-item
          a(href='food-delivery-cart.html').nav-link.fs-lg.fw-medium.py-4.active 1. Your order
        li.nav-item
          a(href='food-delivery-checkout.html').nav-link.fs-lg.fw-medium.py-4 2. Checkout
      .px-3.px-sm-4.px-xl-5.pt-1.pb-4.pb-sm-5
        .row

          // Items in cart
          .col-lg-8.col-md-7.pt-sm-2
            // Item
            .d-sm-flex.justify-content-between.align-items-center.mt-3.mb-4.pb-3.border-bottom
              .d-block.d-sm-flex.align-items-center.text-center.text-sm-start
                a(href='#').d-inline-block.flex-shrink-0.mx-auto.me-sm-4
                  img(src='img/food-delivery/cart/01.jpg' width='120' alt='Pizza')
                .pt-2
                  h3.product-title.fs-base.mb-2
                    a(href='#') Pizza Pepperoni with Tomatoes
                  .fs-sm
                    span.text-muted.me-2 Size:
                    | Medium
                  .fs-sm
                    span.text-muted.me-2 Base:
                    | Standard
                  .fs-lg.text-accent.pt-2 $9.<small>00</small>
              .pt-2.pt-sm-0.ps-sm-3.mx-auto.mx-sm-0.text-center.text-sm-start(style='max-width: 9rem;')
                label(for='quantity1').form-label Quantity
                input(type='number' id='quantity1' value='1' min='1').form-control
                button(type='button').btn.btn-link.px-0.text-danger
                  i.ci-close-circle.me-2
                  span.fs-sm Remove
            // Item
            .d-sm-flex.justify-content-between.align-items-center.mb-4.pb-3.border-bottom
              .d-block.d-sm-flex.align-items-center.text-center.text-sm-start
                a(href='#').d-inline-block.flex-shrink-0.mx-auto.me-sm-4
                  img(src='img/food-delivery/cart/02.jpg' width='120' alt='Burger')
                .pt-2
                  h3.product-title.fs-base.mb-2
                    a(href='#') Beef Burger with Fries
                  .fs-sm
                    span.text-muted.me-2 Size:
                    | XL
                  .fs-sm
                    span.text-muted.me-2 Sauce:
                    | Barbeque
                  .fs-lg.text-accent.pt-2 $12.<small>00</small>
              .pt-2.pt-sm-0.ps-sm-3.mx-auto.mx-sm-0.text-center.text-sm-start(style='max-width: 9rem;')
                label(for='quantity2').form-label Quantity
                input(type='number' id='quantity2' value='1' min='1').form-control
                button(type='button').btn.btn-link.px-0.text-danger
                  i.ci-close-circle.me-2
                  span.fs-sm Remove
            // Item
            .d-sm-flex.justify-content-between.align-items-center.mb-4.pb-3.border-bottom
              .d-block.d-sm-flex.align-items-center.text-center.text-sm-start
                a(href='#').d-inline-block.flex-shrink-0.mx-auto.me-sm-4
                  img(src='img/food-delivery/cart/03.jpg' width='120' alt='Drink')
                .pt-2
                  h3.product-title.fs-base.mb-2
                    a(href='#') Coca Cola Can, 335ml
                  .fs-sm
                    span.text-muted.me-2 Size:
                    | 335ml
                  .fs-lg.text-accent.pt-2 $1.<small>00</small>
              .pt-2.pt-sm-0.ps-sm-3.mx-auto.mx-sm-0.text-center.text-sm-start(style='max-width: 9rem;')
                label(for='quantity3').form-label Quantity
                input(type='number' id='quantity3' value='3' min='1').form-control
                button(type='button').btn.btn-link.px-0.text-danger
                  i.ci-close-circle.me-2
                  span.fs-sm Remove
          
          // Sidebar
          .col-lg-4.col-md-5.pt-3.pt-sm-4
            .rounded-3.bg-secondary.px-3.px-sm-4.py-4
              .text-center.mb-4.pb-3.border-bottom
                h3.h5.mb-3.pb-1 Total
                h4.fw-normal
                  | $24.
                  small 00
              .mb-4
                label(for='order-comments').form-label.mb-3
                  span.badge.bg-info.fs-xs.me-2 Note
                  | Additional comments
                textarea(rows='4')#order-comments.form-control
              h3.h6.mb-4 Apply promo code
              form(method='post' novalidate).needs-validation
                .mb-3
                  input(type='text' placeholder='Promo code' required).form-control
                  .invalid-feedback Please provide promo code.
                button(type='submit').btn.btn-outline-primary.d-block.w-100 Apply promo code
              a(href='food-delivery-checkout.html').btn.btn-primary.btn-shadow.d-block.w-100.mt-4.mb-3
                i.ci-card.fs-lg.me-2
                | Proceed to Checkout


//- Footer
block footer
  include partials/footer-food-delivery

//- Handheld toolbar
block toolbar
  include partials/toolbar-food-delivery
