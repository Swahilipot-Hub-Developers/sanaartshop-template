header.shadow-sm

  // Topbar
  .topbar.topbar-dark.bg-dark
    .container
      div
        .topbar-text.dropdown.disable-autohide
          a(href='#' data-bs-toggle='dropdown').topbar-link.dropdown-toggle
            img(src='img/flags/en.png' width='20' alt='English').me-2
            | Eng / $
          ul.dropdown-menu.my-1
            li.dropdown-item
              select.form-select.form-select-sm
                option(value='usd') $ USD
                option(value='eur') € EUR
                option(value='ukp') £ UKP
                option(value='jpy') ¥ JPY
            li
              a(href='#').dropdown-item.pb-1
                img(src='img/flags/fr.png' width='20' alt='Français').me-2
                | Français
            li
              a(href='#').dropdown-item.pb-1
                img(src='img/flags/de.png' width='20' alt='Deutsch').me-2
                | Deutsch
            li
              a(href='#').dropdown-item
                img(src='img/flags/it.png' width='20' alt='Italiano').me-2
                | Italiano
        .topbar-text.text-nowrap.d-none.d-md-inline-block.border-start.border-light.ps-3.ms-3
          span.text-muted.me-1 Available 24/7 at
          a(href='tel:00331697720').topbar-link (00) 33 169 7720
      .topbar-text.dropdown.d-md-none.ms-auto
        a(href='#' data-bs-toggle='dropdown').topbar-link.dropdown-toggle Wishlist / Compare / Track
