          li
            a(href='account-wishlist.html').dropdown-item
              i.ci-heart.text-muted.me-2
              | Wishlist (3)
          li
            a(href='comparison.html').dropdown-item
              i.ci-compare.text-muted.me-2
              | Compare (3)
          li
            a(href='order-tracking.html').dropdown-item
              i.ci-location.text-muted.me-2
              | Order tracking
      .d-none.d-md-block.ms-3.text-nowrap
