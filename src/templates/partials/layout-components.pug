                      a(href='navbar.html').widget-list-link Navbar
                    li()&attributes(pageTitle === 'Offcanvas' ? {'class': 'widget-list-item active'} : {'class': 'widget-list-item'})
                      a(href='offcanvas.html').widget-list-link Offcanvas
                    li()&attributes(pageTitle === 'Pagination' ? {'class': 'widget-list-item active'} : {'class': 'widget-list-item'})
                      a(href='pagination.html').widget-list-link Pagination
                    li()&attributes(pageTitle === 'Pills' ? {'class': 'widget-list-item active'} : {'class': 'widget-list-item'})
                      a(href='pills.html').widget-list-link Pills
                    li()&attributes(pageTitle === 'Placeholders' ? {'class': 'widget-list-item active'} : {'class': 'widget-list-item'})
                      a(href='placeholders.html').widget-list-link Placeholders
                    li()&attributes(pageTitle === 'Popovers' ? {'class': 'widget-list-item active'} : {'class': 'widget-list-item'})
                      a(href='popovers.html').widget-list-link Popovers
                    li()&attributes(pageTitle === 'Progress' ? {'class': 'widget-list-item active'} : {'class': 'widget-list-item'})
                      a(href='progress.html').widget-list-link Progress
                    li()&attributes(pageTitle === 'Shop components' ? {'class': 'widget-list-item active'} : {'class': 'widget-list-item'})
                      a(href='shop-components.html').widget-list-link Shop components
                    li()&attributes(pageTitle === 'Social buttons' ? {'class': 'widget-list-item active'} : {'class': 'widget-list-item'})
                      a(href='social-buttons.html').widget-list-link Social buttons
                    li()&attributes(pageTitle === 'Spinners' ? {'class': 'widget-list-item active'} : {'class': 'widget-list-item'})
                      a(href='spinners.html').widget-list-link Spinners
                    li()&attributes(pageTitle === 'Steps' ? {'class': 'widget-list-item active'} : {'class': 'widget-list-item'})
                      a(href='steps.html').widget-list-link Steps
                    li()&attributes(pageTitle === 'Tabs' ? {'class': 'widget-list-item active'} : {'class': 'widget-list-item'})
                      a(href='tabs.html').widget-list-link Tabs
                    li()&attributes(pageTitle === 'Team' ? {'class': 'widget-list-item active'} : {'class': 'widget-list-item'})
                      a(href='team.html').widget-list-link Team
                    li()&attributes(pageTitle === 'Testimonials / reviews' ? {'class': 'widget-list-item active'} : {'class': 'widget-list-item'})
                      a(href='testimonials.html').widget-list-link Testimonials / reviews
                    li()&attributes(pageTitle === 'Toasts' ? {'class': 'widget-list-item active'} : {'class': 'widget-list-item'})
                      a(href='toasts.html').widget-list-link Toasts
                    li()&attributes(pageTitle === 'Tooltips' ? {'class': 'widget-list-item active'} : {'class': 'widget-list-item'})
                      a(href='tooltips.html').widget-list-link Tooltips
                    li()&attributes(pageTitle === 'Video button' ? {'class': 'widget-list-item active'} : {'class': 'widget-list-item'})
                      a(href='video-button.html').widget-list-link Video button
                    li()&attributes(pageTitle === 'widgets' ? {'class': 'widget-list-item active'} : {'class': 'widget-list-item'})
                      a(href='widgets.html').widget-list-link Widgets
                .widget.widget-links.widget-light.mb-4.pb-2
                  h3.widget-title.text-white Utilities
                  ul.widget-list
                    li.widget-list-item
                      a(href='https://getbootstrap.com/docs/5.2/utilities/borders/' target='_blank' rel='noopener').widget-list-link Bootstrap
                    li()&attributes(pageTitle === 'Cartzilla utilities' ? {'class': 'widget-list-item active'} : {'class': 'widget-list-item'})
                      a(href='utilities.html').widget-list-link Cartzilla

          // Page title
          .border-bottom.mt-lg-2.pt-5.pb-2.mb-5
            h1.mt-3.mt-lg-4.pt-5 !{pageTitle}
            .d-flex.flex-wrap.flex-md-nowrap.justify-content-between
              p.text-muted !{pageSubtitle}
              if Object.keys(pageTitleLink).length
                p.fs-sm.ps-md-4
                  a()&attributes({'href': pageTitleLink.link, 'class': 'text-nowrap', 'target': '_blank', 'rel': 'noopener'})= pageTitleLink.title
                    i.ci-arrow-right.align-middle.ms-1
              if isPageTitleBadge
                .ps-md-4.mb-3
                  span.badge.bg-info Cartzilla component

          block content

        if anchorNav.length
          // Quick (anchor) navigation
          .col-xxl-3.d-none.d-xxl-block.ps-5
            aside.sticky-top.pt-5
              .pt-5.mt-5
                .widget.widget-links.ps-4.border-start
                  h3.widget-title Jump to
                  ul.widget-list
                    each item in anchorNav
                      li.widget-list-item
                        - var linkatts = {'href': item.link}
                        a(class='widget-list-link', 'data-scroll')&attributes(linkatts)= item.title

    // Back To Top Button
    a(href='#top' data-scroll data-fixed-element).btn-scroll-top
      span.btn-scroll-top-tooltip.text-muted.fs-sm.me-2 Top
      i.btn-scroll-top-icon.ci-arrow-up    
    
    // Vendor scrits: js libraries and plugins
    +vendor-scripts

    // Main theme script
    script()&attributes(isNestedFile ? {'src': '../js/theme.min.js'} : {'src': 'js/theme.min.js'})
