//- Include config.pug file that holds all variables
block config
  include ../helpers/config

//- Mixins - reusable code snippets
include ../helpers/mixins
  
//- Override default config variables
append config
  - var isNestedFile = true
  - var isCodeHighlighting = true

doctype html
html(lang="en")

  //- head.pug template
  include head 
  
  // Body
  body
    
    main.container-fluid

      // Main content
      section.offcanvas-enabled.row.pb-3.pb-md-4
        .col-xxl-9

          // Navbar
          header(data-scroll-header data-fixed-element).navbar.navbar-expand.navbar-light.fixed-top.bg-light.shadow-sm.px-3.px-lg-4
            a(href='typography.html').navbar-brand.d-lg-none
              img(src='../img/logo-dark.png' width='142' alt='Cartzilla')
            ul.navbar-nav.ms-auto.d-none.d-lg-flex
              li.nav-item
                a(href='../index.html').nav-link
                  i.ci-eye.align-middle.mt-n1.me-2
                  | Live preview
              li.nav-item: .nav-link.disabled.text-border.px-1 |
              li.nav-item
                a(href='../docs/dev-setup.html').nav-link
                  i.ci-book.align-middle.mt-n1.me-2
                  | Documentation
              li.nav-item: .nav-link.disabled.text-border.px-1 |
            button(type='button' data-bs-toggle='offcanvas' data-bs-target='#components-nav').navbar-toggler.d-block.d-lg-none.ms-auto
              span.navbar-toggler-icon
            a(href='https://themes.getbootstrap.com/product/cartzilla-bootstrap-e-commerce-template-ui-kit/' target='_blank' rel='noopener').btn.btn-primary.btn-shadow.ms-2.ms-lg-4
              i.ci-cart.me-2.d-none.d-sm-inline-block
              | Buy now
      
          // Side navigation
          aside#components-nav.offcanvas.offcanvas-expand.bg-dark
            .offcanvas-header.navbar.bg-darker.d-none.d-lg-block
              a(href='typography.html').navbar-brand.py-1
                img(src='../img/logo-light.png' width='142' alt='Cartzilla')
              span.badge.bg-info Components
            .offcanvas-header.bg-darker.align-items-center.d-flex.d-lg-none
              .d-flex.align-items-center
                h5.text-light.mb-0.me-2 Menu
                span.badge.bg-info Components
              button(type='button' data-bs-dismiss='offcanvas' aria-label='Close').btn-close.btn-close-white
            .offcanvas-body.py-0(data-simplebar data-simplebar-auto-hide='true')
              .pt-4.pb-3.mt-lg-3
                .d-flex.d-lg-none.pb-4.mb-4.border-bottom.border-light
                  a(href='../index.html').btn.btn-outline-light.btn-sm.me-3
                    i.ci-eye.align-middle.mt-n1.me-2
                    | Live demo
                  a(href='../docs/dev-setup.html').btn.btn-light.btn-sm.ps-2
                    i.ci-book.align-middle.mt-n1.me-2
                    | Documentation
                .widget.widget-links.widget-light.border-bottom.border-light.mb-4.pb-4.me-n3
                  h3.widget-title.text-white Content
                  ul.widget-list
                    li()&attributes(pageTitle === 'Typography' ? {'class': 'widget-list-item active'} : {'class': 'widget-list-item'})
                      a(href='typography.html').widget-list-link Typography
                    li()&attributes(pageTitle === 'Icon font' ? {'class': 'widget-list-item active'} : {'class': 'widget-list-item'})
                      a(href='icon-font.html').widget-list-link Icon font
                    li()&attributes(pageTitle === 'Code' ? {'class': 'widget-list-item active'} : {'class': 'widget-list-item'})
                      a(href='code.html').widget-list-link Code
                    li()&attributes(pageTitle === 'Images & figures' ? {'class': 'widget-list-item active'} : {'class': 'widget-list-item'})
                      a(href='images.html').widget-list-link Images &amp; figures
                    li()&attributes(pageTitle === 'Tables' ? {'class': 'widget-list-item active'} : {'class': 'widget-list-item'})
                      a(href='tables.html').widget-list-link Tables
                .widget.widget-links.widget-light.border-bottom.border-light.mb-4.pb-4.me-n3
                  h3.widget-title.text-white Components
                  ul.widget-list
