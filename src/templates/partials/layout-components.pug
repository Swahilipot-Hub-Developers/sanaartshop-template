                    li()&attributes(pageTitle === 'Charts' ? {'class': 'widget-list-item active'} : {'class': 'widget-list-item'})
                      a(href='charts.html').widget-list-link Charts
                    li()&attributes(pageTitle === 'Collapse' ? {'class': 'widget-list-item active'} : {'class': 'widget-list-item'})
