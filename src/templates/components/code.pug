  - var pageSubtitle = 'Displaying inline and multiline blocks of code.'
  - var pageTitleLink = {'title': 'Bootstrap docs', 'link': 'https://getbootstrap.com/docs/5.2/content/reboot/#inline-code'}
  - var isModalExample = true
  - var anchorNav = [{'title': 'Inline code', 'link': '#code-inline'}, {'title': 'User input', 'link': '#code-user-input'}, {'title': 'Variables', 'link': '#code-variables'}, {'title': 'Code block', 'link': '#code-block'}, {'title': 'Code block scrollable', 'link': '#code-scrollable'}, {'title': 'Code highlighting', 'link': '#code-highlighting'}]
  
//- Page Content
