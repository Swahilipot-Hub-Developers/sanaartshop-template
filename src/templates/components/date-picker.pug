extends ../partials/layout-components

//- Override default config variables
append config
  - var vendorStyles = ['prismjs/themes/prism.css', 'prismjs/plugins/toolbar/prism-toolbar.css', 'prismjs/plugins/line-numbers/prism-line-numbers.css', 'flatpickr/dist/flatpickr.min.css']
  - var vendorScripts = ['prismjs/components/prism-core.min.js', 'prismjs/components/prism-markup.min.js', 'prismjs/components/prism-clike.min.js', 'prismjs/components/prism-javascript.min.js', 'prismjs/components/prism-pug.min.js', 'prismjs/plugins/toolbar/prism-toolbar.min.js', 'prismjs/plugins/copy-to-clipboard/prism-copy-to-clipboard.min.js', 'prismjs/plugins/line-numbers/prism-line-numbers.min.js', 'flatpickr/dist/flatpickr.min.js', 'flatpickr/dist/plugins/rangePlugin.js']
  - var pageTitle = 'Date / time picker'
  - var pageSubtitle = 'A lightweight and powerful date / time picker component.'
  - var isPageTitleBadge = true
  - var anchorNav = [{'title': 'Date picker', 'link': '#picker-date'}, {'title': 'Date and time picker', 'link': '#picker-date-time'}, {'title': 'Min date + default date', 'link': '#picker-min-default-date'}, {'title': 'Date range', 'link': '#picker-date-range'}]
  
//- Page Content
block content
  .alert.alert-info.d-flex.mt-n3.mb-4(role='alert')
    .alert-icon
      i.ci-announcement
    .text-break
      p.fs-md.mb-2 Make sure to link to <strong>Flatpickr css and js</strong> files in your document: <strong>vendor/flatpickr/dist/flatpickr.min.css</strong> and <strong>vendor/flatpickr/dist/flatpickr.min.js</strong>. Use this page as a reference.
      p.fs-md.mb-0 For <strong>date range feature</strong> make sure to link also <strong>vendor/flatpickr/dist/plugins/rangePlugin.js</strong>.

  .bg-secondary.rounded.p-4.mb-5
    h6.fs-sm You can alter date / time picker behaviour via flexible data API.
    code.fs-sm data-datepicker-options = '{}'
    | :
    h6.fs-sm.pt-3 To see all available options visit:
      a(href='https://flatpickr.js.org/options/' target='_blank' rel='noopener').text-break.ms-2
        | https://flatpickr.js.org/options/
    h6.fs-sm Usage examples:
      a(href='https://flatpickr.js.org/examples/' target='_blank' rel='noopener').text-break.ms-2
        | https://flatpickr.js.org/examples/
  
  // Date picker
  section#picker-date.pb-5.mb-md-2
    h2.h5.mb-3 Date picker
    .card.border-0.shadow
      .card-header
        ul(role='tablist').nav.nav-tabs.card-header-tabs
          li.nav-item
            a(href='#result1' data-bs-toggle='tab' role='tab' aria-controls='result1' aria-selected='true').nav-link.active Result
          li.nav-item
            a(href='#html1' data-bs-toggle='tab' role='tab' aria-controls='html1' aria-selected='false').nav-link HTML
          li.nav-item
            a(href='#pug1' data-bs-toggle='tab' role='tab' aria-controls='pug1' aria-selected='false').nav-link Pug
      .card-body
        .tab-content
          #result1.tab-pane.fade.show.active(role='tabpanel')
            .mb-2(style='max-width: 22rem;')
              label.form-label Choose date
              .input-group
                input(type='text' placeholder='Choose date' data-datepicker-options='{"altInput": true, "altFormat": "F j, Y", "dateFormat": "Y-m-d"}').form-control.date-picker.rounded.pe-5
                i.ci-calendar.position-absolute.top-50.end-0.translate-middle-y.me-3
          #html1.tab-pane.fade(role='tabpanel')
            pre.line-numbers
              code(class='lang-html').
                &lt;!-- Date picker --&gt;
                &lt;label class=&quot;form-label&quot;&gt;Choose date&lt;/label&gt;
                &lt;div class=&quot;input-group&quot;&gt;
                  &lt;input class=&quot;form-control date-picker rounded pe-5&quot; type=&quot;text&quot; placeholder=&quot;Choose date&quot; data-datepicker-options='{&quot;altInput&quot;: true, &quot;altFormat&quot;: &quot;F j, Y&quot;, &quot;dateFormat&quot;: &quot;Y-m-d&quot;}'&gt;
                  &lt;i class=&quot;fi-calendar position-absolute top-50 end-0 translate-middle-y me-3&quot;&gt;&lt;/i&gt;
                &lt;/div&gt;
          #pug1.tab-pane.fade(role='tabpanel')
            pre.line-numbers
              code(class='lang-pug').
                // Date picker
