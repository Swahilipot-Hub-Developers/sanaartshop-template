        .tab-content.py-1
          #result1.tab-pane.fade.show.active(role='tabpanel')
            .toast.fade.show(role='alert' aria-live='assertive' aria-atomic='true')
              .toast-header
                .d-inline-block.align-middle.bg-primary.rounded.me-2(style='width: 1.25rem; height: 1.25rem;')
                h6.fs-sm.mb-0.me-auto Bootstrap
                small 11 mins ago
